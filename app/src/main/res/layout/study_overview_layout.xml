<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="15dp"
    android:background="#9EC7E3"
    >

    <TextView
        android:id="@+id/studyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf = "parent"/>

    <TextView
        android:id="@+id/univName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/studyName"
        android:maxLines="2"
        android:textSize="16sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/nextParticipation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/univName"
        android:maxLines="1"
        android:textSize="16sp"
        android:text="Joined on 11-1-2020"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!--Button
        android:id="@+id/participateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextParticipation"
        android:layout_marginTop="10dp"
        android:text="Participate"/>

