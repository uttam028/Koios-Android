<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="15dp"
    android:background="@drawable/layout_border2"
    >

    <TextView
        android:id="@+id/studyName"
        android:layout_width="261dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:maxLines="2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/univName"
        android:layout_width="229dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studyName" />

    <TextView
        android:id="@+id/nextParticipation"
        android:layout_width="248dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:maxLines="1"
        android:text="Joined on 11-1-2020"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/univName"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="87dp"
        android:layout_height="111dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/univName"
        app:srcCompat="@drawable/task"
        tools:layout_editor_absoluteY="21dp" />

    <!--Button
        android:id="@+id/participateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextParticipation"
        android:layout_marginTop="10dp"
        android:text="Participate"/>

