<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="15dp"
    android:background="@drawable/survey_border"
    >

    <TextView
        android:id="@+id/surveyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf = "parent"/>

    <TextView
        android:id="@+id/openStudyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/surveyName"
        android:maxLines="2"
        android:textSize="14sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/lastParticipation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/openStudyName"
        android:maxLines="1"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/colorNdBlue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>